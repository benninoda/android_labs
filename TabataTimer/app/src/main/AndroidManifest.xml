<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.javalabs.tabatatimer">

    <application
        android:name=".helper.TabataTimerApplication"
        android:icon="@drawable/ic_tabata"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_tabata"
        android:supportsRtl="true"
        android:theme="@style/Theme.TabataTimer.Launcher">
        <activity
            android:name=".activities.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:configChanges="locale"
            android:theme="@style/Theme.TabataTimer"
            android:parentActivityName=".activities.MainActivity">

        </activity>
        <activity
            android:name=".activities.MainActivity"
            android:theme="@style/Theme.TabataTimer.Launcher"
            android:label="@string/app_name"
            android:configChanges="locale">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>